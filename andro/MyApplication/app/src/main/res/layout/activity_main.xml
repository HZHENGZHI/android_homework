<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<EditText
				android:layout_width="match_parent"
				android:layout_height="36dp"
				android:inputType="textPassword"
				android:ems="10"
				tools:layout_editor_absoluteY="106dp" tools:layout_editor_absoluteX="57dp" android:id="@+id/editText2"
				android:paddingBottom="@dimen/padding_bottom" android:layout_marginBottom="@dimen/padding_bottom"
				android:layout_marginTop="@dimen/padding_bottom" android:layout_marginLeft="@dimen/left"
				android:layout_marginRight="@dimen/left"/>
		<EditText
				android:layout_width="match_parent"
				android:layout_height="42dp"
				android:inputType="textPersonName"

				android:ems="10"
				tools:layout_editor_absoluteY="52dp" tools:layout_editor_absoluteX="57dp" android:id="@+id/editText"
				android:layout_marginLeft="@dimen/left" android:layout_marginRight="@dimen/left"
				android:layout_marginBottom="@dimen/padding_bottom"/>
		<Button
				android:text="Button"
				android:layout_width="match_parent"
				android:layout_height="49dp" tools:layout_editor_absoluteY="188dp"
				tools:layout_editor_absoluteX="42dp" android:id="@+id/button" android:layout_marginLeft="@dimen/left"
				android:layout_marginRight="@dimen/left"/>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>